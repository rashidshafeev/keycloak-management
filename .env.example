# Keycloak Core Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme
KEYCLOAK_CLIENT_SECRET=changeme

# Database Configuration
POSTGRES_PASSWORD=changeme
DB_VENDOR=postgres
DB_ADDR=postgres
DB_DATABASE=keycloak
DB_USER=keycloak
DB_PASSWORD=changeme

# Docker Configuration
DOCKER_REGISTRY=docker.io
KEYCLOAK_VERSION=latest
POSTGRES_VERSION=15

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_EMAIL=admin@example.com
SSL_DOMAINS=auth.example.com

# Monitoring Configuration
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVAL_INTERVAL=15s
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_SIZE=50GB

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-sid
TWILIO_AUTH_TOKEN=your-token
TWILIO_FROM_NUMBER=your-number

# Security Configuration
WAZUH_MANAGER_IP=localhost
WAZUH_REGISTRATION_PASSWORD=changeme
WAZUH_AGENT_NAME=keycloak-agent

# Firewall Configuration
FIREWALL_MAX_BACKUPS=5
FIREWALL_ALLOWED_PORTS=8080,8443,9990
FIREWALL_ADMIN_IPS=127.0.0.1

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/opt/keycloak/backups

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Event System
EVENT_WEBHOOK_SECRET=changeme
EVENT_STORE_PROVIDER=jpa
EVENT_STORE_EXPIRATION=2592000  # 30 days in seconds
EVENT_ADMIN=true
EVENT_ADMIN_INCLUDE_REPRESENTATION=false

# Performance Tuning
KC_HTTP_RELATIVE_PATH=/auth
KC_PROXY=edge
KC_HOSTNAME_STRICT=false
KC_HTTP_MAX_CONNECTIONS=100
