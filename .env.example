# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_DB_PASSWORD=keycloak_db_password

# Docker Configuration
DOCKER_REGISTRY=docker.io
KEYCLOAK_VERSION=latest
POSTGRES_VERSION=latest

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Prometheus Configuration
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVAL_INTERVAL=15s
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_SIZE=50GB

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Grafana SMTP Configuration
GRAFANA_SMTP_ENABLED=true
GRAFANA_SMTP_HOST=smtp.example.com
GRAFANA_SMTP_PORT=587
GRAFANA_SMTP_USER=alerts@example.com
GRAFANA_SMTP_PASSWORD=smtp_password
GRAFANA_SMTP_FROM=alerts@example.com

# Grafana Alert Notifications
GRAFANA_ALERT_EMAIL=admin@example.com
GRAFANA_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
GRAFANA_SLACK_CHANNEL=#alerts

# Wazuh Configuration
WAZUH_MANAGER_IP=localhost
WAZUH_REGISTRATION_PASSWORD=wazuh_password
WAZUH_AGENT_NAME=keycloak-agent

# Firewall Configuration
FIREWALL_MAX_BACKUPS=5
FIREWALL_ALLOWED_PORTS=8080,8443,9990
FIREWALL_ADMIN_IPS=127.0.0.1,192.168.1.100

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/opt/keycloak/backups

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
